@model IEnumerable<DATN.Models.Service>

<!-- Template Main CSS File -->
<link rel="stylesheet" href="~/FE2/css/style.css" />
<link rel="stylesheet" href="~/FE2/css/roomsList.css" />
<link rel="stylesheet" href="~/FE2/css/responsive.css" />
<!-- page title -->
<div class="page-title container-fluid">
    <div class="container" style="position: relative;">
        <p class="title">Dịch vụ</p>
        <p class="page-tree">
            <span class="home"><a href="/">Trang chủ</a></span>
            <span><i class="fa fa-angle-right"></i></span>
            <span><a href="#">Dịch vụ</a></span>
        </p>
    </div>
</div>
<!-- end page title -->
<section class="main">
    <div class="container">
        <div class="row">
            <div class="col-12 col-xl-12">
                <div class="rooms">
                    <div class="rooms__list">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-12 col-lg-4">
                                    <div class="rooms__item">
                                        <div class="rooms__img">
                                            <a href="/DetailService/@item.Id">
                                                <img src="./Images/Service/@item.Image"
                                                     alt="services list" />
                                            </a>
                                        </div>
                                        <div class="rooms__content">
                                            <div class="rooms__line"></div>
                                            <h3>@item.Title</h3>
                                            <p class="rooms__padding">
                                                @item.Description
                                            </p>
                                            <a href="/DetailService/@item.Id"><button>Xem chi tiết</button></a>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                        <div class="rooms__pagination">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">
                                            <i class="far fa-chevron-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">3</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">
                                            <i class="far fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>

<!-- Main JS-->
<script src="~/FE2/js/single-room.js"></script>
<script src="~/FE2/js/main.js"></script>