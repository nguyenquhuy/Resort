@model IEnumerable<DATN.Models.Room>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Danh sách phòng</h2>
<a asp-action="Create" class="btn btn-success">Thêm phòng mới</a>
<table class="table">
    <thead>
        <tr>
            <th>Tên phòng</th>
            <th>Loại phòng</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Name</td>
                <td>@room.RoomType.Name</td>
                <td>@room.Price</td>
                <td><img src="~/Images/Room/@room.Image" alt="Hình ảnh phòng" style="width:100px; height:auto;" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.ID" class="btn btn-primary">Sửa</a> 
                    <a asp-action="Delete" asp-route-id="@room.ID" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>


