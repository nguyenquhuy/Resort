@model IEnumerable<DATN.Models.RoomType>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Trang loại phòng</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-book"></i>Thêm loại phòng</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên loại phòng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td> <!-- Display Serial Number -->                
                <td>
                    @Html.DisplayFor(modelItem => item.value.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.value.Id" class="btn btn-primary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.value.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
